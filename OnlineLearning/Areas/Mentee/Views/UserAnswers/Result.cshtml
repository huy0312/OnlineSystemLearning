@model OnlineLearning.Models.ViewModels.QuizResultViewModel
@{
    ViewData["Title"] = "Kết quả bài Quiz";
    Layout = "~/Views/Shared/_Layout_Copy.cshtml";
}

<div class="container py-5">
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="h5 mb-0">Quiz Results: @Model.QuizName</h2>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h3 class="h5">General information</h3>
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Total number of questions
                            <span class="badge bg-primary rounded-pill">@Model.TotalQuestions</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Number of correct answers
                            <span class="badge bg-success rounded-pill">@Model.CorrectAnswers</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Score
                            <span class="badge bg-info rounded-pill">@Model.Score</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Result
                            @if (Model.Score >= 7)
                            {
                                <span class="badge bg-success rounded-pill">Pass</span>
                            }
                            else
                            {
                                <span class="badge bg-danger rounded-pill">Not Pass</span>
                            }
                        </li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 h-100">
                        <div class="card-body d-flex align-items-center justify-content-center">
                            <div class="text-center">
                                @if (Model.Score >= 7)
                                {
                                    <i class="fas fa-medal text-success" style="font-size: 80px;"></i>
                                    <h4 class="mt-3">Congratulations!</h4>
                                    <p class="text-muted">You have successfully completed the quiz.</p>
                                }
                                else
                                {
                                    <i class="fas fa-book-reader text-warning" style="font-size: 80px;"></i>
                                    <h4 class="mt-3">Try harder!</h4>
                                    <p class="text-muted">Learn more and try again</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("DoQuiz", "UserAnswers", new { area = "Mentee", courseId = Model.CourseId, moduleId = Model.ModuleId, quizId = Model.QuizId })" class="btn btn-outline-primary me-2">
                <i class="fas fa-redo me-2"></i>Replay
            </a>
            <a href="@Url.Action("ViewModule", "Lesson", new { area = "Mentee", courseId = Model.CourseId, moduleId = Model.ModuleId })" class="btn btn-primary">
                    <i class="fas fa-home me-2"></i>Back to lesson page
            </a>
        </div>
    </div>
</div>